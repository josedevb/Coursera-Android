<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="angelapps.com.examen.PantallaPrincipal"
    android:background="@drawable/listo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/titulo_app"
        android:id="@+id/textView"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:textSize="40dp"
        android:textColorHighlight="@color/abc_background_cache_hint_selector_material_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton"
        android:id="@+id/button"
        android:background="@android:color/transparent"
        android:minHeight="50dp"
        android:minWidth="150dp"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        style="@style/AlertDialog.AppCompat.Light"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <?xml version="1.0" encoding="utf-8"?>

</RelativeLayout>
